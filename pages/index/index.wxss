/**index.wxss**/



.dia-item {
  margin-top: 0.5rem;
  margin-bottom: 0.5rem;
  flex-grow: 1;
}

.dia-item .label {
  color: #4d4d4d;
  background-color: #f2f2f2;
  width: auto;
  padding: 0.5rem;
  padding-left: 1rem;
  font-weight: 500;
}

.dia-item .label .sign, .dia-item .label .must {
  font-weight: 100;
  font-size: 85%;
}

.dia-item .label .must {
  color: #d00600;
}

.dia-item .item, button {
  width: auto;
  margin: 1rem;
}

.dia-item .item textarea {
  border-bottom: 1px solid #ccc;
  margin: -1rem;
  width: auto;
  padding: 1rem;
}

.dia-item .item input, .dia-item .item picker {
  width: auto;
  border-bottom: 1px solid #ccc;
  transition: border 1s;
  line-height: 2rem;
}

.dia-item .item .picker-summary {
  padding: 1em;
  line-height: 2em;
  background: #eee;
  color: #333;
  padding-top: 0;
}

.dia-item .total_price {
  background: #d00600;
  text-align: center;
  margin: auto;
  width: 75%;
  border-radius: 0 0 2rem 2rem;
  color: white;
  margin-top: -1rem;
  padding: 0.5rem;
}

.dia-item .total_price .label {
}

.dia-item .total_price .price {
  font-size: 200%;
}

checkbox {
  transform: all 0.5s;
}

.dia-item :disabled{
  opacity: 0.5;
  /* text-decoration: line-through; */
}

.topFixed{
  background:#09BB07;
  position:fixed;
  top:0;
  left:0;
  color:white;
  width:100%;
  height:1.4em;
  text-align:center;
  font-size:1em;
  z-index:99999;
}