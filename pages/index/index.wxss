/**index.wxss**/

view {
  font-size: 28rpx;
}

.dia-item {
  margin-top: 0.5rem;
  margin-bottom: 0.5rem;
  flex-grow: 1;
}

.dia-item .label {
  color: #4d4d4d;
  background-color: #f2f2f2;
  width: auto;
  padding: 0.5rem;
  padding-left: 1rem;
  font-weight: 500;
}

.dia-item .label .sign {
  font-weight: 100;
  font-size: 85%;
}

.dia-item .item, button {
  width: auto;
  margin: 1rem;
}

.dia-item .item input,.dia-item .item picker {
  width: auto;
  border-bottom: 1px solid #ccc;
  transition: border 1s;
  line-height: 2rem;
}

.dia-item .item textarea {
  border-bottom: 1px solid #ccc;
  margin: -1rem;
  width: auto;
  padding: 1rem;
}

.dia-item .item input:focus {
  border-bottom: 1px solid #d00600 !important;
}

.dia-item .total_price {
  background: #d00600;
  text-align: center;
  margin: auto;
  width: 75%;
  border-radius: 0 0 2rem 2rem;
  color: white;
  margin-top: -1rem;
  padding: 0.5rem;
}

.dia-item .total_price .label {
}
.dia-item .total_price .price{
  font-size: 200%;
}
