/**app.wxss**/

.container {
  overflow-x: hidden;
  height: 100%;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  justify-content: space-between;
  /* padding: 200rpx 0; */
  box-sizing: border-box;
  padding-bottom: 135rpx;
}

.flex {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100%;
}

.flex>.flex-child {
  display: flex;
  height: 100%;
}

.block{
  display:block;
  width:100%;
  height:auto;
}
.flex .block{
  display:flex;
  width:100%;
  height:auto;
}

.flex-center-h {
  justify-content: center;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

view {
  font-size: 28rpx;
}
